@implements PayrollEngine.WebApp.Presentation.IItemValidator<Payroll>

@using PayrollEngine.WebApp.ViewModel
@using PayrollEngine.WebApp.Presentation
@using PayrollEngine.WebApp.Server.Components

<MudDialog Class="item-dialog">
    <DialogContent>
        <MudForm @ref="form">
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-3">
                <MudTabPanel Text="Common">
                    <MudStack Class="pa-4" Spacing="1">
                        <LocalizationTextField Item="@Payroll" @bind-Value="Payroll.Name"
                                               PropertyName="@nameof(Payroll.Name)"
                                               MaxLength="@SystemSpecification.KeyTextLength"
                                               ReadOnly="@Payroll.IsExistingObject"
                                               Label="@(Payroll.IsNewObject ? "Name (immutable)" : "Name")"
                                               Validation="@(!string.IsNullOrWhiteSpace(Payroll.Name))"
                                               Required="true" RequiredError="Name is required" />
                        <MudSelect T="string" @bind-Value="Payroll.DivisionName"
                                   Disabled="@(DivisionNames == null || DivisionNames.Count < 1)"
                                   ReadOnly="@Payroll.IsExistingObject"
                                   Label="@(Payroll.IsNewObject ? "Division (immutable)" : "Division")">
                            @foreach (var name in DivisionNames)
                            {
                                <MudSelectItem T="string" Value="@name">@name</MudSelectItem>
                            }
                        </MudSelect>
                        <LocalizationTextField Item="@Payroll" @bind-Value="Payroll.Description"
                                               PropertyName="@nameof(Payroll.Description)"
                                               Label="Description" />
                        <MudSelect T="Country" @bind-Value="Payroll.CountryType"
                                   Label="Country">
                            <EnumSelectItems T="Country" />
                        </MudSelect>
                        <MudSelect T="CalendarCalculationMode" @bind-Value="Payroll.CalendarCalculationMode"
                                   Label="Calendar calculation">
                            <EnumSelectItems T="CalendarCalculationMode" />
                        </MudSelect>
                        <ItemBaseFields Item="Payroll" />
                    </MudStack>
                </MudTabPanel>
                <MudTabPanel Text="Clusters">
                    <MudStack Class="pa-4" Spacing="1">
                        <MudTextField T="string" Label="Case" @bind-Value="Payroll.ClusterSetCase" />
                        <MudTextField T="string" Label="Case field" @bind-Value="Payroll.ClusterSetCaseField" />
                        <MudTextField T="string" Label="Case value" @bind-Value="Payroll.ClusterSetCaseValue" />
                        <MudTextField T="string" Label="Collector" @bind-Value="Payroll.ClusterSetCollector" />
                        <MudTextField T="string" Label="Collector retro" @bind-Value="Payroll.ClusterSetCollectorRetro" />
                        <MudTextField T="string" Label="Wage type" @bind-Value="Payroll.ClusterSetWageType" />
                        <MudTextField T="string" Label="Wage type retro" @bind-Value="Payroll.ClusterSetWageTypeRetro" />
                        <MudTextField T="string" Label="Wage type period" @bind-Value="Payroll.ClusterSetWageTypePeriod" />
                    </MudStack>
                </MudTabPanel>
                <MudTabPanel Text="Cluster sets">
                    <ClusterSetGrid Payroll="Payroll" Class="attributes-grid pa-2" />
                </MudTabPanel>
                <MudTabPanel Text="Attributes">
                    <AttributesGrid Item="Payroll" Class="attributes-grid pa-2" />
                </MudTabPanel>
            </MudTabs>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <ItemDialogActions Item="Payroll" FormValidator="this" />
    </DialogActions>
</MudDialog>

@code {
    MudForm form;

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public Payroll Payroll { get; set; } = new();
    [Parameter] public List<string> DivisionNames { get; set; }

    public async Task<bool> ValidateAsync(Payroll payrun) =>
        await form.Revalidate();
}