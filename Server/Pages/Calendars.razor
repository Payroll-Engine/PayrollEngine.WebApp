@page "/calendars"

@using PayrollEngine.WebApp.ViewModel
@using PayrollEngine.WebApp.Server.Components

@inherits PayrollEngine.WebApp.Presentation.EditItemPageBase<ViewModel.Calendar, Query, PayrollEngine.WebApp.Server.Dialogs.CalendarDialog>

@if (!HasFeature(Feature.Calendars))
{
    NavigateHome();
    return;
}

<ItemPageActions PageActions="this" Title="Calendars" />

<MudDataGrid @ref="ItemsGrid" T="Calendar"
             ServerData="GetServerDataAsync"
             EditMode="DataGridEditMode.Form"
             FilterMode="DataGridFilterMode.ColumnFilterRow"
             ColumnResizeMode="ResizeMode.Column"
             SortMode="SortMode.Multiple"
             Filterable="true"
             Hideable="true">
    <Columns>
        <PropertyColumn Property="x => x.Id" IsEditable="false" Filterable="false" />
        <PropertyColumn Property="x => x.Status" />
        <PropertyColumn Property="x => x.Name" />
        <PropertyColumn Property="x => x.CycleTimeUnit" Title="Cycle type" />
        <PropertyColumn Property="x => x.PeriodTimeUnit" Title="Period type" />
        <PropertyColumn Property="x => x.TimeMap" Title="Time map" />
        <PropertyColumn Property="x => x.WeekMode" Title="Week mode" />
        <PropertyColumn Property="x => x.Created">
            <CellTemplate>
                @ValueFormatter.ToCompactString(context.Item.Created)
            </CellTemplate>
        </PropertyColumn>
        <PropertyColumn Property="x => x.Updated">
            <CellTemplate>
                @ValueFormatter.ToCompactString(context.Item.Updated)
            </CellTemplate>
        </PropertyColumn>
        <CustomColumns T="Calendar" Columns="ColumnConfiguration" />
        <ItemActionsColumn T="Calendar" ActionOperator="this" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="Calendar" />
    </PagerContent>
    <NoRecordsContent>
        No calendars available
    </NoRecordsContent>
</MudDataGrid>
