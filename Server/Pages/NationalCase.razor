@page "/nationalcase"
@page "/nationalcase/{caseName}"
@inherits CaseBase;

@if (!HasFeature(Feature.NationalCases))
{
    NavigateHome();
    return;
}
@if (!HasTenant)
{
    <div>Please select a tenant</div>
    return;
}
@if (!HasPayroll)
{
    <div>Please select a payroll</div>
    return;
}

@{
    // BuildRenderTree needs to be called otherwise inherited HTML won't be rendered.
    // Might be changed/"fixed" in the future, see: https://github.com/dotnet/aspnetcore/issues/21664
    base.BuildRenderTree(__builder);
}
