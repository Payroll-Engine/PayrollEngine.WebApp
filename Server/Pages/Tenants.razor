@page "/tenants"

@using PayrollEngine.WebApp.ViewModel
@using PayrollEngine.WebApp.Server.Components

@inherits PayrollEngine.WebApp.Presentation.EditItemPageBase<Tenant, Query, PayrollEngine.WebApp.Server.Dialogs.TenantDialog>

@if (!HasFeature(Feature.Tenants))
{
    NavigateHome();
    return;
}

<ItemPageActions PageActions="this" Title="Tenants" />

<MudDataGrid @ref="ItemsGrid" T="Tenant"
             ServerData="GetServerDataAsync"
             EditMode="DataGridEditMode.Form"
             FilterMode="DataGridFilterMode.ColumnFilterRow"
             ColumnResizeMode="ResizeMode.Column"
             SortMode="SortMode.Multiple"
             Filterable="true"
             Hideable="true">
    <Columns>
        <PropertyColumn Property="x => x.Id" IsEditable="false" Filterable="false" />
        <PropertyColumn Property="x => x.Status" />
        <PropertyColumn Property="x => x.Identifier" />
        <PropertyColumn Property="x => x.Created">
            <CellTemplate>
                @ValueFormatter.ToCompactString(context.Item.Created)
            </CellTemplate>
        </PropertyColumn>
        <PropertyColumn Property="x => x.Updated">
            <CellTemplate>
                @ValueFormatter.ToCompactString(context.Item.Updated)
            </CellTemplate>
        </PropertyColumn>
        <CustomColumns T="Tenant" Columns="ColumnConfiguration" />
        <ItemActionsColumn T="Tenant" ActionOperator="this" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="Tenant" />
    </PagerContent>
    <NoRecordsContent>
        No tenants available
    </NoRecordsContent>
</MudDataGrid>
