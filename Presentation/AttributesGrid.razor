<MudDataGrid @ref="Grid" T="AttributeItem" Items="@Attributes"
             Height="@Height" Class="@Class" Style="@Style">
    <Columns>
        <PropertyColumn Property="x => x.Name" />
        <PropertyColumn Property="x => x.ValueType" />
        <PropertyColumn Property="x => x.Value" />
        <TemplateColumn T="AttributeItem" CellClass="d-flex justify-end" ShowColumnOptions="false"
                        ShowFilterIcon="false" Sortable="false">
            <HeaderTemplate>
                <MudStack Row="true" Justify="Justify.FlexEnd" Class="d-flex flex-grow-1">
                    <MudTooltip Delay="500" Text="@($"Add new {ItemName} attribute")" Placement="Placement.Top">
                        <MudIconButton @onclick="@AddAttributeAsync"
                                       Color="Color.Tertiary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Add"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </HeaderTemplate>
            <FilterTemplate />
            <CellTemplate>
                <MudStack Row="true">
                    <MudTooltip Delay="500" Text="@($"Delete {ItemName} attribute")" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => DeleteAttributeAsync(context.Item))"
                                       Color="Color.Secondary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Delete" Size="Size.Small" />
                    </MudTooltip>
                    <MudTooltip Delay="500" Text="@($"Edit {ItemName} attribute")" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => EditAttributeAsync(context.Item))"
                                       Color="Color.Primary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <NoRecordsContent>
        No attributes available
    </NoRecordsContent>
</MudDataGrid>
