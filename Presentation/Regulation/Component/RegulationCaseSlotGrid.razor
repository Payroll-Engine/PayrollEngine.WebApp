@using PayrollEngine.Client.Model

<MudInputLabel>@Item.GetItemLabel(Field)</MudInputLabel>

@if (!CaseSlots.Any())
{
    <div class="d-flex flex-grow-1 pb-2">
        None
        <div class="d-flex flex-grow-1 justify-end">
            <MudTooltip Delay="500" Text="Add case slot" Placement="Placement.Top">
                <MudIconButton @onclick="@AddCaseSlotAsync"
                               Color="Color.Tertiary" Variant="Variant.Outlined"
                               Icon="@Icons.Material.Filled.Add"
                               Size="Size.Small" />
            </MudTooltip>
        </div>
    </div>
    return;
}

<MudDataGrid @ref="Grid" T="CaseSlot"
             Items="@CaseSlots"
             ReadOnly="@Item.IsReadOnlyField(Field)">
    <Columns>
        <PropertyColumn Property="x => x.Name" />
        <TemplateColumn T="CaseSlot" CellClass="d-flex justify-end" ShowColumnOptions="false"
                        ShowFilterIcon="false" Sortable="false">
            <HeaderTemplate>
                <MudStack Row="true" Justify="Justify.FlexEnd" Class="d-flex flex-grow-1">
                    <MudTooltip Delay="500" Text="Add new case slot" Placement="Placement.Top">
                        <MudIconButton @onclick="@AddCaseSlotAsync"
                                       Color="Color.Tertiary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Add"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </HeaderTemplate>
            <FilterTemplate />
            <CellTemplate>
                <MudStack Row="true">
                    <MudTooltip Delay="500" Text="Delete case slot" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => DeleteCaseSlotAsync(context.Item))"
                                       Color="Color.Secondary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Delete" Size="Size.Small" />
                    </MudTooltip>
                    <MudTooltip Delay="500" Text="Edit case slot" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => EditCaseSlotAsync(context.Item))"
                                       Color="Color.Primary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <NoRecordsContent>
        No case slots available
    </NoRecordsContent>
</MudDataGrid>
