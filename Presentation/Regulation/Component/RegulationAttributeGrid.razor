<MudDataGrid @ref="Grid" T="AttributeItem"
             Items="@Attributes"
             ReadOnly="@Item.IsReadOnlyField(Field)">
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="@Localizer.Shared.Name" />
        <PropertyColumn Property="x => x.ValueType" Title="@Localizer.Shared.ValueType" />
        <PropertyColumn Property="x => x.Value" Title="@Localizer.Shared.Value" />
        <TemplateColumn T="AttributeItem" CellClass="d-flex justify-end" ShowColumnOptions="false"
                        ShowFilterIcon="false" Sortable="false">
            <HeaderTemplate>
                <MudStack Row="true" Justify="Justify.FlexEnd" Class="d-flex flex-grow-1">
                    <MudTooltip Delay="500" Text="@Localizer.Item.AddHelp(LocalizedItemName)" Placement="Placement.Top">
                        <MudIconButton @onclick="@AddAttributeAsync"
                                       Color="Color.Tertiary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Add"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </HeaderTemplate>
            <FilterTemplate />
            <CellTemplate>
                <MudStack Row="true">
                    <MudTooltip Delay="500" Text="@Localizer.Item.DeleteHelp(LocalizedItemName)" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => DeleteAttributeAsync(context.Item))"
                                       Color="Color.Secondary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Delete" Size="Size.Small" />
                    </MudTooltip>
                    <MudTooltip Delay="500" Text="@Localizer.Item.EditHelp(LocalizedItemName)" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => EditAttributeAsync(context.Item))"
                                       Color="Color.Primary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <NoRecordsContent>
        @Localizer.Attribute.NotAvailable
    </NoRecordsContent>
</MudDataGrid>
