<MudDataGrid @ref="Grid" T="ReportQuery"
             Items="@Queries"
             ReadOnly="@Item.IsReadOnlyField(Field)">
    <Columns>
        <PropertyColumn Property="x => x.Name" />
        <PropertyColumn Property="x => x.Value" />
        <TemplateColumn T="ReportQuery" CellClass="d-flex justify-end" ShowColumnOptions="false"
                        ShowFilterIcon="false" Sortable="false">
            <HeaderTemplate>
                <MudStack Row="true" Justify="Justify.FlexEnd" Class="d-flex flex-grow-1">
                    <MudTooltip Delay="500" Text="Add new report query" Placement="Placement.Top">
                        <MudIconButton @onclick="@AddQueryAsync"
                                       Color="Color.Tertiary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Add"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </HeaderTemplate>
            <FilterTemplate />
            <CellTemplate>
                <MudStack Row="true">
                    <MudTooltip Delay="500" Text="Delete report query" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => DeleteQueryAsync(context.Item))"
                                       Color="Color.Secondary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Delete" Size="Size.Small" />
                    </MudTooltip>
                    <MudTooltip Delay="500" Text="Edit report query" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => EditQueryAsync(context.Item))"
                                       Color="Color.Primary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <NoRecordsContent>
        No report queries available
    </NoRecordsContent>
</MudDataGrid>
