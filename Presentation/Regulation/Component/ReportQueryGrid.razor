<MudDataGrid T="ReportQuery"
             Items="@Queries"
             ReadOnly="@Item.IsReadOnlyField(Field)">
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="@Localizer.Shared.Name" />
        <PropertyColumn Property="x => x.Value" Title="@Localizer.Shared.Value" />
        <TemplateColumn T="ReportQuery" CellClass="d-flex justify-end" ShowColumnOptions="false"
                        ShowFilterIcon="false" Sortable="false">
            <HeaderTemplate>
                <MudStack Row="true" Justify="Justify.FlexEnd" Class="d-flex flex-grow-1">
                    <MudTooltip Delay="@Globals.TooltipDelay" Text="@Localizer.Item.AddTitle(Localizer.ReportQuery.ReportQuery)" Placement="Placement.Top">
                        <MudIconButton @onclick="@AddQueryAsync"
                                       Color="Color.Tertiary"
                                       Variant="@Globals.ToolButtonVariant"
                                       Icon="@Icons.Material.Filled.Add"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </HeaderTemplate>
            <FilterTemplate />
            <CellTemplate>
                <MudStack Row="true">
                    <MudTooltip Delay="@Globals.TooltipDelay" Text="@Localizer.Item.RemoveTitle(Localizer.ReportQuery.ReportQuery)" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => RemoveQueryAsync(context.Item))"
                                       Color="Color.Secondary"
                                       Variant="@Globals.ToolButtonVariant"
                                       Icon="@Icons.Material.Filled.Delete"
                                       Size="Size.Small" />
                    </MudTooltip>
                    <MudTooltip Delay="@Globals.TooltipDelay" Text="@Localizer.Item.EditTitle(Localizer.ReportQuery.ReportQuery)" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => EditQueryAsync(context.Item))"
                                       Color="Color.Primary"
                                       Variant="@Globals.ToolButtonVariant"
                                       Icon="@Icons.Material.Filled.Edit"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <NoRecordsContent>
        @Localizer.ReportQuery.NotAvailable
    </NoRecordsContent>
</MudDataGrid>
