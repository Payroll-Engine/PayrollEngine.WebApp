@using PayrollEngine.Data

<MudDataGrid T="DataRelation"
             Items="@DataRelations"
             ReadOnly="@Item.IsReadOnlyField(Field)">
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="@Localizer.Shared.Name" />
        <PropertyColumn Property="x => x.ParentTable" Title="@Localizer.Report.RelationParentTable" />
        <PropertyColumn Property="x => x.ParentColumn" Title="@Localizer.Report.RelationParentColumn" />
        <PropertyColumn Property="x => x.ChildTable" Title="@Localizer.Report.RelationChildTable" />
        <PropertyColumn Property="x => x.ChildColumn" Title="@Localizer.Report.RelationChildColumn" />
        <TemplateColumn T="DataRelation" CellClass="d-flex justify-end" ShowColumnOptions="false"
                        ShowFilterIcon="false" Sortable="false">
            <HeaderTemplate>
                <MudStack Row="true" Justify="Justify.FlexEnd" Class="d-flex flex-grow-1">
                    <MudTooltip Delay="1000" Text="@Localizer.Item.AddTitle(Localizer.Report.Relation)" Placement="Placement.Top">
                        <MudIconButton @onclick="@AddDataRelationAsync"
                                       Color="Color.Tertiary" 
                                       Variant="@Globals.ButtonVariant"
                                       Icon="@Icons.Material.Filled.Add"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </HeaderTemplate>
            <FilterTemplate />
            <CellTemplate>
                <MudStack Row="true">
                    <MudTooltip Delay="1000" Text="@Localizer.Item.RemoveTitle(Localizer.Report.Relation)" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => RemoveDataRelationAsync(context.Item))"
                                       Color="Color.Secondary" 
                                       Variant="@Globals.ButtonVariant"
                                       Icon="@Icons.Material.Filled.Delete"
                                       Size="Size.Small" />
                    </MudTooltip>
                    <MudTooltip Delay="1000" Text="@Localizer.Item.EditTitle(Localizer.Report.Relation)" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => EditDataRelationAsync(context.Item))"
                                       Color="Color.Primary"
                                       Variant="@Globals.ButtonVariant"
                                       Icon="@Icons.Material.Filled.Edit" 
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <NoRecordsContent>
        @Localizer.Report.RelationNotAvailable
    </NoRecordsContent>
</MudDataGrid>
