@using PayrollEngine.Data

<MudDataGrid @ref="Grid" T="DataRelation"
             Items="@DataRelations"
             ReadOnly="@Item.IsReadOnlyField(Field)">
    <Columns>
        <PropertyColumn Property="x => x.Name" />
        <PropertyColumn Property="x => x.ParentTable" Title="Parent table" />
        <PropertyColumn Property="x => x.ParentColumn" Title="Parent column" />
        <PropertyColumn Property="x => x.ChildTable" Title="Child table" />
        <PropertyColumn Property="x => x.ChildTable" Title="Child table" />
        <TemplateColumn T="DataRelation" CellClass="d-flex justify-end" ShowColumnOptions="false"
                        ShowFilterIcon="false" Sortable="false">
            <HeaderTemplate>
                <MudStack Row="true" Justify="Justify.FlexEnd" Class="d-flex flex-grow-1">
                    <MudTooltip Delay="500" Text="Add new data relation" Placement="Placement.Top">
                        <MudIconButton @onclick="@AddDataRelationAsync"
                                       Color="Color.Tertiary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Add"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </HeaderTemplate>
            <FilterTemplate />
            <CellTemplate>
                <MudStack Row="true">
                    <MudTooltip Delay="500" Text="Delete data relation" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => DeleteDataRelationAsync(context.Item))"
                                       Color="Color.Secondary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Delete" Size="Size.Small" />
                    </MudTooltip>
                    <MudTooltip Delay="500" Text="Edit data relation" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => EditDataRelationAsync(context.Item))"
                                       Color="Color.Primary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <NoRecordsContent>
        No report queries available
    </NoRecordsContent>
</MudDataGrid>
