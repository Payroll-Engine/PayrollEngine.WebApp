@using PayrollEngine.WebApp.ViewModel
@using PayrollEngine.WebApp.Shared

@inject ILocalizerService LocalizerService;

<MudSelect T="RegulationCase"
           Label="@Item.GetItemLabel(Field, LocalizerService.Localizer)"
           HelperText="@Item.GetItemHelp(Field)"
           Value="@SelectedCase" ValueChanged="ValueChangedAsync"
           Disabled="@(Cases == null || Cases.Count < 1)"
           ReadOnly="@Item.IsReadOnlyField(Field)"
           Clearable="@Item.IsClearableField(Field)">
    @{
        foreach (var regulationCase in Cases)
        {
            <MudSelectItem T="RegulationCase" Value="@regulationCase">@regulationCase.Name</MudSelectItem>
        }
    }
</MudSelect>
