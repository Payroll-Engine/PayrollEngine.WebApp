@using PayrollEngine.Client.Model

<MudInputLabel>@Item.GetItemLabel(Field)</MudInputLabel>

@if (!References.Any())
{
    <div class="d-flex flex-grow-1 pb-2">
        None
        <div class="d-flex flex-grow-1 justify-end">
            <MudTooltip Delay="500" Text="Add base case field" Placement="Placement.Top">
                <MudIconButton @onclick="@CreateReferenceAsync"
                           Color="Color.Tertiary" Variant="Variant.Outlined"
                           Icon="@Icons.Material.Filled.Add"
                           Size="Size.Small" />
            </MudTooltip>
        </div>
    </div>
    return;
}

<MudDataGrid @ref="Grid" T="CaseFieldReference"
             Items="@References"
             Dense="true"
             ReadOnly="@Item.IsReadOnlyField(Field)">
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="Base case field" />
        <PropertyColumn Property="x => x.Order" />
        <TemplateColumn T="CaseFieldReference" CellClass="d-flex justify-end" ShowColumnOptions="false"
                        ShowFilterIcon="false" Sortable="false">
            <HeaderTemplate>
                <MudStack Row="true" Justify="Justify.FlexEnd" Class="d-flex flex-grow-1">
                    <MudTooltip Delay="500" Text="Add base case field" Placement="Placement.Top">
                        <MudIconButton @onclick="@CreateReferenceAsync"
                                       Color="Color.Tertiary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Add"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </HeaderTemplate>
            <FilterTemplate />
            <CellTemplate>
                <MudStack Row="true">
                    <MudTooltip Delay="500" Text="Delete base case field" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => DeleteReferenceAsync(context.Item))"
                                       Color="Color.Secondary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Delete" Size="Size.Small" />
                    </MudTooltip>
                    <MudTooltip Delay="500" Text="Edit base case field" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => UpdateReferenceAsync(context.Item))"
                                       Color="Color.Primary" Variant="Variant.Outlined"
                                       Icon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>
