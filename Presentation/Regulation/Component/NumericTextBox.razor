@using PayrollEngine.WebApp.Shared
@typeparam T

@inject ILocalizerService LocalizerService;

<MudNumericField T="T"
                 Label="@Item.GetItemLabel(Field, LocalizerService.Localizer)"
                 HelperText="@Item.GetItemHelp(Field)"
                 Value="@Value" ValueChanged="ValueChangedAsync"
                 ReadOnly="@Item.IsReadOnlyField(Field)"
                 Required="@Field.Required"
                 RequiredError="@Field.RequiredError" />
