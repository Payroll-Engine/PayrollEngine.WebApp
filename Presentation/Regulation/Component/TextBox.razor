<MudTextField T="string"
              Label="@Item.GetItemLabel(Field)"
              HelperText="@Item.GetItemHelp(Field, HelperText)"
              Variant="@Variant"
              Value="@Value" ValueChanged="ValueChangedAsync"
              ReadOnly="@Item.IsReadOnlyField(Field)"
              Required="@Field.Required"
              RequiredError="@Field.RequiredError"
              Lines="@Field.Lines"
              MaxLength="@Field.MaxLength"
              Adornment="@LocalizationAdornment"
              AdornmentIcon="@Icons.Material.Filled.Language"
              AdornmentColor="@LocalizationColor"
              AdornmentAriaLabel="@LocalizationHelp"
              OnAdornmentClick="OpenLocalizationsAsync" />
