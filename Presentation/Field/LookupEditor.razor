@using System.Globalization
@using PayrollEngine.WebApp.ViewModel
@using ValueType = PayrollEngine.ValueType

@* unsupported value types *@
@if (Field.ValueType is ValueType.NumericBoolean or ValueType.WebResource or ValueType.None)
{
    return;
}

@if (Field.ValueType.IsString())
{
    <StringLookup Field="@Field" Culture="@Culture" Disabled="@Disabled" />
}
else if (Field.ValueType.IsBoolean())
{
    <BooleanLookup Field="@Field" Culture="@Culture" Disabled="@Disabled" />
}
else if (Field.ValueType.IsInteger())
{
    <IntegerLookup Field="@Field" Culture="@Culture" Disabled="@Disabled" />
}
else if (Field.ValueType.IsDecimal())
{
    <DecimalLookup Field="@Field" Culture="@Culture" Disabled="@Disabled" />
}
else if (Field.ValueType.IsDateTime())
{
    <DateTimeLookup Field="@Field" Culture="@Culture" Disabled="@Disabled" />
}

@code
{
    [Parameter] public IFieldObject Field { get; set; }
    [Parameter] public CultureInfo Culture { get; set; }
    [Parameter] public bool Disabled { get; set; }
}
