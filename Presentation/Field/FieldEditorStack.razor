@using PayrollEngine.WebApp.ViewModel;

<MudStack Spacing="@Spacing">
    @foreach (var field in Fields)
    {
        // ignore hidden fields
        if (field.Attributes?.GetHidden(Language) ?? false)
        {
            continue;
        }
        <FieldEditor Field="field" Language="@Language" Disabled="@Disabled" />
    }
</MudStack>

@code
{
    [Parameter] public IEnumerable<IFieldObject> Fields { get; set; }
    [Parameter] public Language Language { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public int Spacing { get; set; } = 0;
}
