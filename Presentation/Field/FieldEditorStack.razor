@using System.Globalization
@using PayrollEngine.WebApp.ViewModel;

<MudStack Spacing="@Spacing">
    @foreach (var field in Fields)
    {
        // ignore hidden fields
        if (field.Attributes?.GetHidden(Culture) ?? false)
        {
            continue;
        }
        <FieldEditor Field="field" Culture="@Culture" Disabled="@Disabled" />
    }
</MudStack>

@code
{
    [Parameter] public IEnumerable<IFieldObject> Fields { get; set; }
    [Parameter] public CultureInfo Culture { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public int Spacing { get; set; }
}
