@inherits LookupFieldEditorBase;

<MudSelect T="bool?"
@bind-Value="Field.ValueAsBoolean"
           Culture="@Culture"
           Label="@ValueLabel"
           HelperText="@ValueHelp"
           Error="@Error"
           Variant="@Variant"
           Disabled="@ValuesDisabled"
           ReadOnly="@ReadOnly"
           Required="@Required"
           RequiredError="@ValueRequiredError">
    @foreach (var lookupValue in LookupValues)
    {
        <MudSelectItem T="bool?" Value="@lookupValue.GetBooleanValue(ValueFieldName)">
            @lookupValue.GetStringValue(TextFieldName)
        </MudSelectItem>
    }
</MudSelect>
