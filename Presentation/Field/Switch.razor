@inherits FieldEditorBase;

<MudSwitch T="bool?"
           @bind-value="@Field.ValueAsBoolean"
           Culture="@Culture"
           Color="Color.Primary"
           Label="@ValueLabel"
           LabelPlacement="Placement.Start"
           Error="@Error"
           Disabled="@Disabled"
           ReadOnly="@ReadOnly"
           Required="@ValueRequired"
           RequiredError="@ValueRequiredError" />

@code
{
    /// <summary>
    /// The default MudCheckBox raises a required error on false value
    /// </summary>
    private bool ValueRequired => !Field.HasValue && Required;
}
