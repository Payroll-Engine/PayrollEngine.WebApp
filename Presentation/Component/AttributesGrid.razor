<MudDataGrid @ref="Grid" 
             T="AttributeItem"
             Items="@Attributes"
             Height="@Height"
             Class="@Class" 
             Style="@Style">
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="@Localizer.Shared.Name" />
        <PropertyColumn Property="x => x.ValueType" Title="@Localizer.Shared.ValueType" />
        <PropertyColumn Property="x => x.Value" Title="@Localizer.Shared.Value" />
        <TemplateColumn T="AttributeItem" CellClass="d-flex justify-end" ShowColumnOptions="false"
                        ShowFilterIcon="false" Sortable="false">
            <HeaderTemplate>
                <MudStack Row="true" Justify="Justify.FlexEnd" Class="d-flex flex-grow-1">
                    <MudTooltip Delay="@Globals.TooltipDelay" Text="@Localizer.Item.AddHelp(LocalizedItemName)" Placement="Placement.Top">
                        <MudIconButton @onclick="@AddAttributeAsync"
                                       Color="Color.Tertiary" 
                                       Variant="@Globals.ToolButtonVariant"
                                       Icon="@Icons.Material.Filled.Add"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </HeaderTemplate>
            <FilterTemplate />
            <CellTemplate>
                <MudStack Row="true">
                    <MudTooltip Delay="@Globals.TooltipDelay" Text="@Localizer.Item.RemoveHelp(LocalizedItemName)" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => RemoveAttributeAsync(context.Item))"
                                       Color="Color.Secondary" 
                                       Variant="@Globals.ToolButtonVariant"
                                       Icon="@Icons.Material.Filled.Remove" 
                                       Size="Size.Small" />
                    </MudTooltip>
                    <MudTooltip Delay="@Globals.TooltipDelay" Text="@Localizer.Item.EditHelp(LocalizedItemName)" Placement="Placement.Top">
                        <MudIconButton @onclick="@(() => EditAttributeAsync(context.Item))"
                                       Color="Color.Primary"
                                       Variant="@Globals.ToolButtonVariant"
                                       Icon="@Icons.Material.Filled.Edit"
                                       Size="Size.Small" />
                    </MudTooltip>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <NoRecordsContent>
        @Localizer.Attribute.NotAvailable
    </NoRecordsContent>
</MudDataGrid>
