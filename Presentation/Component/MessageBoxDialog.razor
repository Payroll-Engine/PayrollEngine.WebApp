<MudDialog Class="dialog" TitleClass="@($"mud-theme-primary pe-dialog-title {TitleStyle} py-4 px-8")" ContentClass="dialog-background-surface py-4 px-8">
    <DialogContent>
        <MudStack Row="true">
            <MudIcon Icon="@(Icon ?? Icons.Material.Filled.Info)"
                     Color="@IconColor"
                     Style="font-size: 2rem; align-self: center;" />
            <MudText Style="align-self: center ">
                @Options.Message
                @Options.MarkupMessage
            </MudText>
        </MudStack>
    </DialogContent>
    <DialogActions>
        @if (Options.CancelText != null)
        {
            <MudButton Variant="@Globals.ButtonVariant"
                       OnClick="Cancel">
                @Options.CancelText
            </MudButton>
        }
        @if (Options.NoText != null)
        {
            <MudButton Variant="@Globals.ButtonVariant"
                       OnClick="Cancel">
                @Options.NoText
            </MudButton>
        }
        @if (Options.YesText != null)
        {
            <MudButton Color="@SubmitColor"
                       Variant="@SubmitVariant"
                       OnClick="Submit">
                @Options.YesText
            </MudButton>
        }
    </DialogActions>
</MudDialog>

<style>
    .dialog {
        min-width: 24em;
    }

    .title {
        background-color: lightgrey;
    }

    .titleDark {
        background-color: darkslateblue;
    }
</style>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }
    [Parameter] public MessageBoxOptions Options { get; set; }
    [Parameter] public string Icon { get; set; }
    [Parameter] public Color IconColor { get; set; } = Color.Info;
    [Parameter] public Color SubmitColor { get; set; } = Color.Tertiary;
    [Parameter] public Variant SubmitVariant { get; set; } = Globals.ButtonVariant;

    [Inject]
    private IThemeService ThemeService { get; set; }

    private string TitleStyle =>
        ThemeService.IsDarkMode ? "titleDark" : "title";

    private void Submit() =>
        MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() =>
        MudDialog.Cancel();
}